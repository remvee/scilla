<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" 
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>

    <servlet>
	<servlet-name>scilla</servlet-name>
	<servlet-class>org.scilla.util.Servlet</servlet-class>
	<init-param>
	    <param-name>scilla.source</param-name>
	    <param-value>@source.dir@</param-value>
	    <description>Location where media files reside</description>
	</init-param>
	<init-param>
	    <param-name>scilla.cache</param-name>
	    <param-value>@cache.dir@</param-value>
	    <description>Location where cache files reside</description>
	</init-param>
	<load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
	<servlet-name>playlist.m3u</servlet-name>
	<servlet-class>PlaylistServlet</servlet-class>
    </servlet>

</web-app>
