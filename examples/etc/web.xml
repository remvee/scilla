<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" 
    "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>

    <servlet>
	<servlet-name>scilla</servlet-name>
	<servlet-class>org.scilla.util.Servlet</servlet-class>
	<init-param>
	    <param-name>source.dir</param-name>
	    <param-value>@source.dir@</param-value>
	    <description>Location where media files reside</description>
	</init-param>
	<!-- init-param>
	    <param-name>converters.osprocess.wrapper.exec</param-name>
	    <param-value>nice -5</param-value>
	    <description>Executable to execute executables</description>
	</init-param -->
	<load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
	<servlet-name>playlist</servlet-name>
	<servlet-class>PlaylistServlet</servlet-class>
	<load-on-startup>2</load-on-startup>
    </servlet>

    <servlet>
	<servlet-name>image</servlet-name>
	<servlet-class>test.ImageServlet</servlet-class>
	<load-on-startup>3</load-on-startup>
    </servlet>

    <servlet-mapping>
	<servlet-name>scilla</servlet-name>
	<url-pattern>/scilla/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
	<servlet-name>playlist</servlet-name>
	<url-pattern>/playlist.m3u</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
	<servlet-name>playlist</servlet-name>
	<url-pattern>/playlist.pls</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
	<servlet-name>image</servlet-name>
	<url-pattern>/img/*</url-pattern>
    </servlet-mapping>

    <taglib>
       <taglib-uri>/WEB-INF/scilla.tld</taglib-uri>
       <taglib-location>/WEB-INF/scilla.tld</taglib-location>
    </taglib>

</web-app>
